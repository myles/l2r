@#!/usr/bin/perl -w 

sub route_add {
	($ip, $gw) = @@_;
	system ("/sbin/route add $ip gw $gw");
	return;
}

sub route_del {
	($ip) = @@_;
	system ("/sbin/route delete $ip");
	return;
}

1;
@


